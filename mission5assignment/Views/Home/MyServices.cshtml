@{
    ViewData["Title"] = "My Services";
}

<h1>I am willing to help you get into biking or just have a buddy to go with!</h1>
<h4>Calcualte Pricing:</h4>

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-body">
            <h2 class="text-center mb-4">Work Hours Calculator</h2>
            <form onsubmit="event.preventDefault(); calculateTotal();">
                <div class="mb-3">
                    <label for="hours" class="form-label">Enter the number of hours you want to work with me:</label>
                    <input type="number" id="hours" class="form-control" min="1" required>
                </div>

                <div class="mb-3">
                    <label for="hourlyRate" class="form-label">Hourly Rate:</label>
                    <input type="text" id="hourlyRate" class="form-control" value="25" readonly>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Calculate Total Cost</button>
                </div>

                <div class="mt-3">
                    <label for="totalCost" class="form-label">Total Cost:</label>
                    <input type="text" id="totalCost" class="form-control" readonly>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function calculateTotal() {
        var numHours = parseFloat($("#hours").val());
        var hourlyRate = parseFloat($("#hourlyRate").val());
        var totalCost = numHours * hourlyRate;
        $("#totalCost").val("$" + totalCost.toFixed(2));
    }
</script>
